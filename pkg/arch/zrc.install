post_install() {
	if ! grep -xqF "/usr/bin/zrc" /etc/shells; then
		echo>&2 "Copying zrc to /etc/shells..."
		echo "/usr/bin/zrc" >> /etc/shells
	fi
}

post_upgrade() {
	:
}

pre_remove() {
	echo>&2 "Removing shell entry..."	
	{ echo 'g/\/usr\/bin\/zrc/d'; echo 'w'; echo 'q'; } | ed -s /etc/shells
}
