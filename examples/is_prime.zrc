#!../bin/zrc

fn este_prim {
	set x = $argv(1)
	if {$x < 2} {
		return 0
	} elsif {$x == 2} {
		return 1
	} elsif {$x % 2 == 0} {
		return 0
	} else {
		set ok = 1
		for {set i = 3} {$i <= ($x>>1)} {inc i 2} {
			if {$x % $i == 0} {
				set ok = 0
				set i = $x
			}
		}
		return $ok
	}
}

fn main {
	printf "x="; set x = $(read str);
	
	while {$x} {
		if [este_prim $x] {
			echo "$x este prim!"
		} else {
			echo "$x nu este prim!"
		}
		inc x -1
	}
}; main
